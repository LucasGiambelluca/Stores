# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3001
NODE_ENV=development

# ==============================================
# SECURITY (CRITICAL)
# ==============================================
# Must be at least 16 chars. Used for signing JWTs.
JWT_SECRET=change_me_to_something_secure_min_16_chars!
# Must be exactly 32 chars. Used for database field encryption.
ENCRYPTION_KEY=00000000000000000000000000000000

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=postgres://user:password@localhost:5432/tiendita

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# URL where this API is hosted
STORE_URL=http://localhost:3000

# HuggingFace Token for Virtual Try-On AI (Optional)
VITE_HUGGINGFACE_TOKEN=hf_placeholder

# ==============================================
# EXTERNAL SERVICES (OPTIONAL IN DEV)
# ==============================================

# Cloudinary (Images)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (SMTP)
